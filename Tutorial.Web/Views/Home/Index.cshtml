@model Tutorial.Web.ViewModel.HomeIndexViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hello From Index.cshtml</title>
</head>
<body>
    <h1>Student</h1>
    <ul>
        @foreach(var s in Model.Students)
        {
            <li>@s.Name (@s.Age) @*<a href="home/detail/@s.Id">Detail</a>*@
                @Html.ActionLink("明细", "detail", new { id = s.Id })
                <a asp-action="Detail" asp-route-id="@s.Id">明细 tag</a>
            </li>
        }
    </ul>
</body>
</html>
