@using Heavy.Web.ViewModels;
@model UserUpdateViewModel

@{
    ViewBag.Title = "编辑用户";
}

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" readonly="readonly" asp-for="UserName" />
            <span class="invalid" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Emial" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Emial" />
            <span class="invalid" asp-validation-for="Emial"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="IdCardNo" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="IdCardNo" />
            <span class="invalid" asp-validation-for="IdCardNo"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BirthDate" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="BirthDate" />
            <span class="invalid" asp-validation-for="BirthDate"></span>
        </div>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>